WindowManager:
    StartScreen:
    ScoresheetScreen:
    QuizScreen:
    CreateClass:
    CreateSet:

<StartScreen>:
    id: root_scr
    name: 'start'
    BoxLayout:
        orientation: 'vertical'
		size: (root.width, root.height)

        MDScreen:
            BoxLayout:
                orientation: 'vertical'
                MDToolbar:
                    use_overflow: True
                    type: 'top'
                    title: "~ Мира ~"
                    anchor_title: 'left'
                    left_action_items: [['home', lambda x: app.change_screen('start'), 'на главную']]
                    right_action_items: [['arrow-left-bold-circle-outline', lambda x: app.back_screen(x), 'назад'], ['puzzle', lambda x: app.change_screen('quiz'), 'запустить тест']]

                MDBottomNavigation:
                    id: tabs
                    panel_color: get_color_from_hex("#4bb760")
                    selected_color_background: get_color_from_hex("#3b934c")
                    text_color_normal: 0, 0, 0, 0.1
                    text_color_active: 0, 0, 0, 1
                    tab_color: 0.5, 0.5, 0.5, 1
                    tab_text_color:  0.13, 0.49, 0.37, 1

                    MDBottomNavigationItem:
                        name: 'classes'
                        icon: "account-multiple-outline"
                        text: 'классы'
                        id: classes
                        ScreenManager:
                            Screen:
                                name: "empty"
                                EmptyScreen:
                                    image: 'account-multiple-outline'
                                    text: 'Список классов пуст\n\nДобавьте классы, нажав кнопку ниже'
                                    callback: app.show_form_create_class
                                    disabled: False
                            Screen:
                                CreateClass:

                    MDBottomNavigationItem:
                        name: 'q_sets'
                        icon: "head-question-outline"
                        text: 'наборы'
                        id: sets
                        ScreenManager:
                            id: sm_tab_sets
                            Screen:
                                name: "empty_set"
                                EmptyScreen:
                                    image: 'folder-search-outline'
                                    text: 'Вы ещё не создали наборов вопросов'
                                    callback: app.show_form_create_set
                                    disabled: False
                            Screen:
                                CreateSet:

                    MDBottomNavigationItem:
                        name: 'reports'
                        icon: 'file-chart-outline'
                        text: 'отчёты'
                        id: reports
                        BoxLayout:
                            orientation: 'vertical'
                            Label:
                                size_hint: 1, .1
                                color: get_color_from_hex("#42636b")
                                text_size: self.size
                                halign: 'center'
                                text: 'Просмотр данных о прохождении классом \"  \" теста \"  \"'
                            FloatLayout:
                                size_hint: 1, .9
                                orientation: 'horizontal'
                                MDIconButton:
                                    icon: 'arrow-left-bold-circle'
                                    pos_hint: {'center_x': .1, 'center_y': .5}
                                Label:
                                    size_hint: .8, 1
                                    pos_hint: {'center_x': .5, 'center_y': .5}
                                    color: 0, 0, 0, 1
                                    text: 'Нет данных'
                                    halign: 'center'
                                MDIconButton:
                                    icon: 'arrow-right-bold-circle'
                                    pos_hint: {'center_x': .9, 'center_y': .5}

                    MDBottomNavigationItem:
                        name: 'scoresheet'
                        icon: 'book-education-outline'
                        text: 'журнал'
                        id: scores
                        on_tab_release:
                            app.root.current = 'scoresheet'
                            root.manager.transition.direction ='right'
                        FloatLayout:
                            orientation: 'vertical'
                            Image:
                                source: 'data/images/tumbleweed.png'
                                pos_hint: {'center_x': .5, 'center_y': 0.6}
                                opacity: .1
                            Label:
                                color: 0, 0, 0, .4
                                text_size: self.size
                                halign: 'center'
                                valign: 'center'
                                text: '\n\n\n\n\n\n\n\n\n\n\nДля просмотра журналов нажмите иконку вкладки повторно'

<ScoresheetScreen>:
    id: scores_scr
    name: 'scoresheet'
    BoxLayout:
        orientation: 'vertical'
		size: (root.width, root.height)

        MDScreen:
            BoxLayout:
                orientation: 'vertical'

                MDToolbar:
                    use_overflow: True
                    type: 'top'
                    title: "~ Журналы ~"
                    anchor_title: 'left'
                    left_action_items: [['home', lambda x: app.change_screen('start'), 'на главную']]
                    right_action_items: [['arrow-left-bold-circle-outline', lambda x: app.back_screen(x), 'назад'], ['information-outline', lambda x: x, 'информация']]

                BoxLayout:
                    ScreenManager:
                        id: sm_tab_scores
                        Screen:
                            name: 'empty_scoresheet'
                            EmptyScreen:
                                image: 'file-hidden'
                                text: 'У вас ещё не сформировались журналы.\nПроводите тесты в ваших классах, чтобы сформировать статистику!'
                                disabled: True
                        Screen:
                            name: 'display_scores'

                MDBottomAppBar:

                    MDToolbar:
                        use_overflow: True
                        icon: "account-switch-outline"
                        on_action_button: app.choose_class()
                        type: 'bottom'
                        anchor_title: 'right'
                        panel_color: get_color_from_hex("#4bb760")
                        left_action_items: [['arrow-left-bold-circle-outline', lambda x: x, 'предыдущий']]
                        right_action_items: [['arrow-right-bold-circle-outline', lambda x: x, 'следующий']]

<QuizScreen>:
    id:  quiz_scr
    name: 'quiz'
    BoxLayout:
        orientation: 'vertical'
		size: (root.width, root.height)

        MDScreen:
            BoxLayout:
                orientation: 'vertical'
                MDToolbar:
                    use_overflow: True
                    type: 'top'
                    title: "~ тест ~"
                    anchor_title: 'center'
                    left_action_items: [['home', lambda x: app.change_screen('start'), 'на главную']]
                    right_action_items: [['arrow-right-drop-circle-outline', lambda x: quiz_act.parse_set(), 'запуск теста']]
                BoxLayout:
                    size_hint: 1, .8
                    QuizCarousel:
                        id: quiz_act

                BoxLayout:
                    size_hint: 1, .01
                    pos_hint: {'central_y': 0}
                    background_color: get_color_from_hex("#4bb760")

<QuizCarousel>:
    name: 'quiz_act'
    orientation: 'vertical'

    MDRectangleFlatButton:
        pos_hint:{'center_x': .5, 'center_y': 0}
        id: set_name
        md_bg_color_disabled: get_color_from_hex("#4bb760")
        disabled_color:  1,1,1,1
        text: root.set_n
        theme_text_color: "Custom"
        text_color: 1,1,1,1
        disabled: True
    Image:
        size_hint: 1, .25
        source: root.image
        opacity: .3
    MDLabel:
        size_hint: 1, .15
        id: question
        font_style: 'H6'
        theme_text_color: "Custom"
        text_color: get_color_from_hex("#42636b")
        text: root.q_text
        halign: 'center'
    BoxLayout:
        id: answers
        orientation: 'vertical'
        size_hint: .9, .4
        pos_hint: {'center_x': .5}
        MDRectangleFlatIconButton:
            size_hint: 1, .25
            icon: "data/images/icon_a.png"
            text: root.answer_a
            line_width: 1.5
            icon_color: 0, .5, 0, 1
        MDRectangleFlatIconButton:
            size_hint: 1, .25
            icon: "data/images/icon_b.png"
            text: root.answer_b
            line_width: 1.5
            icon_color: 0, .5, 0, 1
        MDRectangleFlatIconButton:
            size_hint: 1, .25
            icon: "data/images/icon_c.png"
            text: root.answer_c
            line_width: 1.5
            icon_color: 0, .5, 0, 1
        MDRectangleFlatIconButton:
            size_hint: 1, .25
            icon: "data/images/icon_d.png"
            text: root.answer_d
            line_width: 1.5
            icon_color: 0, .5, 0, 1
    AnchorLayout:
        size_hint: 1, None
        height: dp(60)
        MDFloatingActionButton:
            id: cam_button
            icon: 'camera-enhance'
            size_hint: None, None
            size: dp(56), dp(56)
            opposite_colors: True
            elevation_normal: 8
            pos_hint: {'center_x': .5, 'center_y': 0}
            on_release: root.scan_class()

<EmptyScreen>:
    name: 'empty'
    id: empty_screen
    MDIconButton:
        icon_size: "500sp"
        icon: root.image
        pos_hint: {"center_x": .695, "center_y": .6}
        opacity: .1

    MDLabel:
        id: label
        font_style: 'Subtitle1'
        color: get_color_from_hex("#42636b")
        text: '\n\n\n\n\n'+root.text
        halign: 'center'

    MDFloatingActionButton:
        id: float_act_btn
        icon: 'plus'
        size_hint: None, None
        size: dp(56), dp(56)
        opposite_colors: True
        md_bg_color_disabled: 0,0,0,0
        disabled: 0,0,0,0
        elevation_normal: 8
        pos_hint: {'center_x': .9, 'center_y': .1}
        disabled: root.disabled
        on_release: root.callback()

<CreateClass>:
    id: cr_class
    name: 'cr_class'
    BoxLayout:
        orientation: 'vertical'
		size: (root.width, root.height)
        MDScreen:
            BoxLayout:
                orientation: 'vertical'
                MDToolbar:
                    use_overflow: True
                    type: 'top'
                    title: "~ Создание класса ~"
                    anchor_title: 'center'
                    left_action_items: [['home', lambda x: app.change_screen('start'), 'на главную']]
                    right_action_items: [['arrow-left-bold-circle-outline', lambda x: app.back_screen(x), 'назад']]

                BoxLayout:
                    size_hint: 1, .9
                    pos_hint: {'center_y': .2}
                    orientation: 'vertical'
                    FloatLayout:
                        size_hint: 1, .3
                        Image:
                            id: avatar
                            pos_hint: {'center_y': .5}
                            opacity: 0.2
                            source: 'data/images/account-multi-outline.png'
                        MDFillRoundFlatButton:
                            size_hint: None, None
                            size: dp(150), dp(56)
                            text: "добавить изображение"
                            opposite_colors: True
                            pos_hint: {'center_x': .77, 'center_y': .15}
                            background_color: get_color_from_hex("#4bb760")
                            background_color_down: get_color_from_hex("#3b934c")
                            on_release: app.choice_avatar_class()

                    BoxLayout:
                        orientation: 'vertical'
                        padding: 5, 5
                        size_hint: 1, .7
                        BoxLayout:
                            size_hint: 1, .1
                            orientation: 'horizontal'
                            BoxLayout:
                                size_hint: 0.01, 1
                            MDTextField:
                                id: name_field
                                hint_text: "Название Класса"
                                hint_text_mode: "on_focus"
                                hint_text_color_normal: 0, 0, 0, .8
                                hint_text_color_focus: 0, .3, 0, .85
                                text_color_normal: 0, 0, 0, .6
                                text_color_focus: 0, .25, 0, 1
                                line_color_normal: 0, 0, 0, 0.8
                                line_color_focus: 0, .4, 0, .85
                                multiline: False
                                mode: "rectangle"
                                fill_color_normal: 0, .4, 0, .2
                                icon_left: 'account-group'
                                icon_left_color_focus: get_color_from_hex("#006600")

                        BoxLayout:
                            size_hint: 1, .6
                            MDTextField:
                                id: stud_list_field
                                size_hint: 1, 0.95
                                theme_text_color: "Custom"
                                icon_left: "account-multiple-plus"
                                icon_left_color_focus: get_color_from_hex("#006600")
                                hint_text: "Введите список студентов, \nразделяя учеников переносом строки"
                                hint_text_mode: "on_focus"
                                hint_text_color_normal: 0, 0, 0, 0.8
                                hint_text_color_focus: get_color_from_hex("#266826")
                                text_color_normal: 0, 0, 0, 0.7
                                text_color_focus: get_color_from_hex("#004000")
                                multiline: True
                                mode: "fill"
                                fill_color_normal: get_color_from_hex("#b3d1b3")
                                fill_color_focus: 0, .4, 0, .12
                                max_height: "220dp"

                        BoxLayout:
                            size_hint: 1, .25
                            orientation: 'horizontal'
                            MDIconButton:
                                pos_hint: {'center_x': .5, 'center_y': .5}
                                icon: 'sort-alphabetical-variant'
                                color: 0, 0.3, 0.6, 1

                            GridLayout:
                                selected_color: 0, 0.3, 0, 1
                                id: sort_field
                                cols:2
                                CheckBox:
                                    group: 'sorting'
                                    id: sorted_alphab
                                    color: 0, 0.65, 0, .9
                                    on_active: root.checkbox_click(self, self.active, "по алфавиту")
                                MDLabel:
                                    text: 'по алфавиту'
                                    halign: 'left'
                                    color: 0, 0.5, 0, 1
                                CheckBox:
                                    group: 'sorting'
                                    id: sorted_alph_reverse
                                    color: 0, 0.65, 0, .9
                                    on_active: root.checkbox_click(self, self.active, "обратно алфавиту")
                                MDLabel:
                                    text: "обратно алфавиту"
                                    halign: 'left'
                                    color: 0, 0.5, 0, 1
                                CheckBox:
                                    group: 'sorting'
                                    id: sorted_none
                                    color: 0, 0.65, 0, .9
                                    on_active: root.checkbox_click(self,self.active, "без сортировки")
                                MDLabel:
                                    text: "без сортировки"
                                    halign: 'left'
                                    color: 0, 0.5, 0, 1
                        BoxLayout:
                            size_hint: 1,.1
                    AnchorLayout:
                        anchor_x: 'right'
                        padding: [0, 0, 15, 70]
                        size_hint: 1, None
                        height: dp(40)
                        MDRectangleFlatButton:
                            id: button_ok
                            line_width: 2
                            md_bg_color: 0, 0.5, 0, .25
                            text: '[b]СОЗДАТЬ КЛАСС[/b]'
                            on_release: app.save_info_class()

                MDBottomAppBar:
                    BoxLayout:
                        color: get_color_from_hex("#4bb760")
                        background_color: get_color_from_hex("#4bb760")
                        minimum_size: (root.width, 0.05*root.height)

<CreateSet>:
    id: cr_set
    name: 'cr_set'
    BoxLayout:
        orientation: 'vertical'
        size: (root.width, root.height)

        MDScreen:
            BoxLayout:
                orientation: 'vertical'
                MDToolbar:
                    use_overflow: True
                    type: 'top'
                    title: "~ Создание теста ~"
                    anchor_title: 'center'
                    left_action_items: [['home', lambda x: app.change_screen('start'), 'на главную']]
                    right_action_items: [['arrow-left-bold-circle-outline', lambda x: app.back_screen(x), 'назад']]

                BoxLayout:
                    orientation: 'vertical'
                    BoxLayout:
                        size_hint: .95, .1
                        pos_hint:{'center_x': .5}
                        MDTextField:
                            icon_left: 'card-text-outline'
                            icon_left_color_focus: 0, 0.4, 0, 1
                            id: name_field
                            hint_text: "Название Набора Вопросов"
                            hint_text_mode: "on_focus"
                            hint_text_color_normal: 0, 0, 0, .8
                            hint_text_color_focus: 0, .3, 0, .85
                            text_color_normal: 0, 0, 0, .6
                            text_color_focus: 0, .25, 0, 1
                            line_color_normal: 0, 0, 0, .8
                            line_color_focus: 0, .3, 0, .85
                            multiline: False
                            mode: "rectangle"

                    FloatLayout:
                        size_hint: 1, .2
                        Image:
                            id: image
                            pos_hint: {'center_x': .45, 'center_y': .4}
                            source: 'data/images/brush.png'
                            opacity: .2
                        MDFillRoundFlatButton:
                            size_hint: None, None
                            size: dp(150), dp(56)
                            text: "добавить изображение"
                            opposite_colors: True
                            pos_hint: {'center_x': .77, 'center_y': .15}
                            background_color: get_color_from_hex("#4bb760")
                            background_color_down: get_color_from_hex("#3b934c")
                            on_release: app.choice_question_image()

                    BoxLayout:
                        orientation: 'vertical'
                        padding: 5, 5
                        size_hint: .9, .7
                        pos_hint: {'center_x': .5}
                        BoxLayout:
                            size_hint: 1, .2
                            MDTextField:
                                pos_hint: {'center_x': .5}
                                icon_left: 'pencil-plus-outline'
                                icon_left_color_focus: 0, 0.4, 0, 1
                                id: question_field
                                theme_text_color: "Custom"
                                hint_text: "Введите вопрос"
                                hint_text_mode: "on_focus"
                                hint_text_color_normal: 0, 0, 0, 0.8
                                hint_text_color_focus: 0, 0.3, 0, 0.85
                                text_color_normal: 0, 0, 0, 0.6
                                text_color_focus: 0, 0.25, 0, 1
                                line_color_normal: 0, 0, 0, 0.8
                                line_color_focus: 0, 0.3, 0, 0.85
                                multiline: True
                                mode: "fill"
                                fill_color_normal: 0, .4, 0, .2

                        BoxLayout:
                            size_hint: 1, .2
                            orientation: 'horizontal'
                            MDTextField:
                                icon_left: 'data/images/icon_a.png'
                                icon_left_color_focus: 0, 0.4, 0, 1
                                id: answer_a
                                hint_text: "Введите вариант ответа 'А'"
                                hint_text_mode: "on_focus"
                                hint_text_color_normal: 0, 0, 0, 0.8
                                hint_text_color_focus: 0, 0.3, 0, 0.85
                                text_color_normal: 0, 0, 0, 0.6
                                text_color_focus: 0, 0.25, 0, 1
                                multiline: False
                                mode: "rectangle"
                                max_height: "220dp"
                                fill_color_normal: 0, .4, 0, .2
                            MDCheckbox:
                                id: answer_a_check
                                size_hint: None, None
                                size: "48dp", "48dp"
                                pos_hint: {'center_x': .5, 'center_y': .5}
                        BoxLayout:
                            size_hint: 1, .2
                            orientation: 'horizontal'
                            MDTextField:
                                icon_left: 'data/images/icon_b.png'
                                icon_left_color_focus: 0, 0.4, 0, 1
                                id: answer_b
                                hint_text: "Введите вариант ответа 'Б'"
                                hint_text_mode: "on_focus"
                                hint_text_color_normal: 0, 0, 0, 0.8
                                hint_text_color_focus: 0, 0.3, 0, 0.85
                                text_color_normal: 0, 0, 0, 0.6
                                text_color_focus: 0, 0.25, 0, 1
                                multiline: False
                                mode: "rectangle"
                                max_height: "220dp"
                                fill_color_normal: 0, .4, 0, .2
                            MDCheckbox:
                                active: True
                                id: answer_b_check
                                size_hint: None, None
                                size: "48dp", "48dp"
                                pos_hint: {'center_x': .5, 'center_y': .5}
                        BoxLayout:
                            size_hint: 1, .2
                            orientation: 'horizontal'
                            MDTextField:
                                icon_left: 'data/images/icon_c.png'
                                icon_left_color_focus: 0, 0.4, 0, 1
                                id: answer_c
                                hint_text: "Введите вариант ответа 'В'"
                                hint_text_mode: "on_focus"
                                hint_text_color_normal: 0, 0, 0, 0.8
                                hint_text_color_focus: 0, 0.3, 0, 0.85
                                text_color_normal: 0, 0, 0, 0.6
                                text_color_focus: 0, 0.25, 0, 1
                                multiline: False
                                mode: "rectangle"
                                max_height: "220dp"
                                fill_color_normal: 0, .4, 0, .2
                            MDCheckbox:
                                id: answer_c_check
                                size_hint: None, None
                                size: "48dp", "48dp"
                                pos_hint: {'center_x': .5, 'center_y': .5}
                        BoxLayout:
                            size_hint: 1, .2
                            orientation: 'horizontal'
                            MDTextField:
                                icon_left: 'data/images/icon_d.png'
                                icon_left_color_focus: 0, 0.4, 0, 1
                                id: answer_d
                                hint_text: "Введите вариант ответа 'Г'"
                                hint_text_mode: "on_focus"
                                hint_text_color_normal: 0, 0, 0, 0.8
                                hint_text_color_focus: 0, 0.3, 0, 0.85
                                text_color_normal: 0, 0, 0, 0.6
                                text_color_focus: 0, 0.25, 0, 1
                                multiline: False
                                mode: "rectangle"
                                max_height: "220dp"
                                fill_color_normal: 0, .4, 0, .2
                            MDCheckbox:
                                id: answer_d_check
                                size_hint: None, None
                                size: "48dp", "48dp"
                                pos_hint: {'center_x': .5, 'center_y': .5}
                        BoxLayout:
                            size_hint: 1, 0.1

                    AnchorLayout:
                        size_hint: 1, None
                        anchor_x: 'right'
                        anchor_y: 'bottom'
                        padding: [0, 0, 15, 50]
                        AnchorLayout:
                            size_hint: 1, None
                            height: dp(40)
                            MDRectangleFlatButton:
                                id: button_next
                                line_width: 2
                                line_color: 0, 0.5, 0, .7
                                text_color: 0, 0.5, 0, .7
                                text: '[b]ДАЛЬШЕ[/b]'
                                on_release: app.save_question()
                        AnchorLayout:
                            anchor_x: 'right'
                            size_hint: 1, None
                            height: dp(40)
                            MDRectangleFlatButton:
                                id: button_ok
                                line_width: 2
                                md_bg_color: 0, 0.5, 0, .25
                                text: '[b]СОЗДАТЬ НАБОР[/b]'
                                on_release: app.save_info_set()

                MDBottomAppBar:
                    BoxLayout:
                        minimum_size: (root.width, 0.01*root.height)