#:import get_color_from_hex kivy.utils.get_color_from_hex
#:import MDBottomNavigation kivymd.uix.bottomnavigation.MDBottomNavigation
#:import MDFloatingActionButton kivymd.uix.button.MDFloatingActionButton
#:import MDToolbar kivymd.uix.toolbar.MDToolbar
#:import MDTopAppBar kivymd.uix.toolbar.MDTopAppBar
#:import MDScreen kivymd.uix.screen.MDScreen
#:import MDLabel kivymd.uix.label.MDLabel
#:import MDCheckbox kivymd.uix.selectioncontrol.MDCheckbox

WindowManager:
    StartScreen:
    ScoresheetScreen:
    QuizScreen:

<StartScreen>:
    id: root_scr
    name: 'start'
    BoxLayout:
        orientation: 'vertical'
		size: (root.width, root.height)

        MDScreen:
            BoxLayout:
                orientation: 'vertical'
                MDTopAppBar:
                    use_overflow: True
                    type: 'top'
                    title: "~ Мира ~"
                    anchor_title: 'left'
                    left_action_items: [["home", lambda x: app.change_screen('start'), "на главную"]]
                    right_action_items: [['arrow-left-bold-circle-outline', lambda x: x, "назад"], ["information-outline", lambda x: x, "информация"]]

                MDBottomNavigation:
                    id: tabs
                    panel_color: get_color_from_hex("#4bb760")
                    selected_color_background: get_color_from_hex("#3b934c")
                    text_color_normal: 0, 0, 0, 0.1
                    text_color_active: 0, 0, 0, 1
                    tab_color: 0.5, 0.5, 0.5, 1
                    tab_text_color:  0.13, 0.49, 0.37, 1

                    MDBottomNavigationItem:
                        name: 'classes'
                        icon: 'account-multiple-outline'
                        text: 'классы'
                        id: classes
                        ScreenManager:
                            Screen:
                                EmptyScreen:
                                    image: 'account-multiple-outline'
                                    text: 'Список классов пуст\n\nДобавьте классы, нажав кнопку ниже'
                                    callback: app.show_form_create_class
                                    disabled: False
                            Screen:
                                CreateClass:

                    MDBottomNavigationItem:
                        name: 'q_sets'
                        icon: 'head-question-outline'
                        text: 'наборы'
                        id: sets
                        ScreenManager:
                            id: sm_tab_sets
                            Screen:
                                name: 'empty_sets_list'
                                EmptyScreen:
                                    image: 'folder-search-outline'
                                    text: 'Вы ещё не создали наборов вопросов'
                                    callback: app.show_form_create_set
                                    disabled: False
                            Screen:
                                name: 'create_set'
                                CreateSet:

                    MDBottomNavigationItem:
                        name: 'reports'
                        icon: 'file-chart-outline'
                        text: 'отчёты'
                        id: reports
                        BoxLayout:
                            orientation: 'vertical'
                            Label:
                                color: get_color_from_hex("#42636b")
                                text_size: self.size
                                halign: 'center'
                                text: 'Просмотр данных о прохождении классом \"____\" теста \"____\"'
                            FloatLayout:
                                orientation: 'horizontal'
                                MDIconButton:
                                    icon: 'arrow-left-bold-circle'
                                    pos_hint: {"center_x": .1, "center_y": .5}
                                Label:
                                    color: 0, 0, 0, 1
                                    text: 'Нет данных'
                                MDIconButton:
                                    icon: 'arrow-right-bold-circle'
                                    pos_hint: {"center_x": .9, "center_y": .5}

                    MDBottomNavigationItem:
                        name: 'scoresheet'
                        icon: 'book-education-outline'
                        text: 'журнал'
                        id: scores
                        on_tab_release:
                            app.root.current = 'scoresheet'
                            root.manager.transition.direction ='right'
                        FloatLayout:
                            orientation: 'vertical'
                            Image:
                                source: 'data/images/tumbleweed.png'
                                pos_hint: {'center_x': .5, 'center_y': 0.6}
                                opacity: .1
                            Label:
                                color: 0, 0, 0, .4
                                text_size: self.size
                                halign: 'center'
                                valign: 'center'
                                text: '\n\n\n\n\n\n\n\n\n\n\nДля просмотра журналов нажмите иконку вкладки повторно'

<ScoresheetScreen>:
    id: scores_scr
    name: 'scoresheet'
    BoxLayout:
        orientation: 'vertical'
		size: (root.width, root.height)

        MDScreen:
            BoxLayout:
                orientation: 'vertical'

                MDTopAppBar:
                    use_overflow: True
                    type: 'top'
                    title: "~ Мира ~"
                    anchor_title: 'left'
                    left_action_items: [["home", lambda x: app.change_screen('start'), "на главную"]]
                    right_action_items: [['arrow-left-bold-circle-outline', lambda x: x, "назад"], ["information-outline", lambda x: x, "информация"]]

                BoxLayout:
                    ScreenManager:
                        id: sm_tab_scores
                        Screen:
                            name: 'empty_scoresheet'
                            EmptyScreen:
                                image: 'file-hidden'
                                text: 'У вас ещё не сформировались журналы.\nПроводите тесты в ваших классах, чтобы сформировать статистику!'
                                disabled: True
                        Screen:
                            name: 'display_scores'
                            DisplayScores:

                MDBottomAppBar:
                    MDTopAppBar:
                        use_overflow: True
                        icon: "account-switch-outline"
                        on_action_button: app.choose_class()
                        type: 'bottom'
                        anchor_title: 'right'
                        panel_color: get_color_from_hex("#4bb760")
                        left_action_items: [['arrow-left-bold-circle-outline', lambda x: x, "предыдущий"]]
                        right_action_items: [['arrow-right-bold-circle-outline', lambda x: x, "следующий"]]

<QuizScreen>:
    id:  quiz_scr
    name: 'quiz'
    BoxLayout:
        orientation: 'vertical'
		size: (root.width, root.height)

        MDScreen:
            BoxLayout:
                orientation: 'vertical'
                MDTopAppBar:
                    use_overflow: True
                    type: 'top'
                    title: "~ Запущен тест ~"
                    anchor_title: 'left'
                    left_action_items: [["home", lambda x: app.change_screen('start'), "на главную"]]
                    right_action_items: [['arrow-left-bold-circle-outline', lambda x: x, "назад"]]
                BoxLayout:

<EmptyScreen>:
    name: 'empty'
    id: empty_screen
    MDIconButton:
        icon_size: "150sp"
        icon: root.image
        pos_hint: {"center_x": .695, "center_y": .6}
        opacity: .1

    MDLabel:
        id: label
        font_style: 'Subtitle1'
        color: get_color_from_hex("#42636b")
        text: '\n\n\n\n\n'+root.text
        halign: 'center'

    MDFloatingActionButton:
        id: float_act_btn
        icon: 'plus'
        size_hint: None, None
        size: dp(56), dp(56)
        opposite_colors: True
        elevation_normal: 8
        pos_hint: {'center_x': .9, 'center_y': .1}
        disabled: root.disabled
        on_release: root.callback()

<CreateClass>:
    id: cr_class
    name: 'cr_class'

    orientation: 'vertical'
    FloatLayout:
        size_hint: 1, .3
        Image:
            id: avatar
            pos_hint: {'center_y': .5}
            opacity: 0.2
            source: 'data/images/account-multi-outline.png'
        MDFloatingActionButton:
            icon: 'plus'
            size_hint: None, None
            size: dp(56), dp(56)
            opposite_colors: True
            elevation_normal: 8
            pos_hint: {'center_x': .9, 'center_y': .25}
            background_color: get_color_from_hex("#4bb760")
            background_color_down: get_color_from_hex("#3b934c")
            on_release: app.choice_avatar_class()

    BoxLayout:
        orientation: 'vertical'
        padding: 5, 5
        size_hint: 1, .6

        BoxLayout:
            size_hint: 1, .1
            MDTextField:
                icon_left: 'account-group'
                icon_left_color_focus: 0, 0.4, 0, 1
                id: name_field
                hint_text: "Название Класса"
                hint_text_mode: "on_focus"
                hint_text_color_normal: 0, 0, 0, 0.8
                hint_text_color_focus: 0, 0.3, 0, 0.85
                text_color_normal: 0, 0, 0, 0.6
                text_color_focus: 0, 0.25, 0, 1
                line_color_normal: 0, 0, 0, 0.8
                line_color_focus: 0, 0.3, 0, 0.85
                multiline: False
                #required: True
                mode: "rectangle"
                fill_color: 0, 0, 0, .4

        BoxLayout:
            size_hint: 1, .6
            MDTextField:
                icon_left: 'account-multiple-plus'
                icon_left_color_focus: 0, 0.4, 0, 1
                id: stud_list_field
                hint_text: "Введите список студентов, \nразделяя учеников переносом строки"
                hint_text_mode: "on_focus"
                hint_text_color_normal: 0, 0, 0, 0.8
                hint_text_color_focus: 0, 0.3, 0, 0.85
                size_hint: 1, 0.95
                text_color_normal: 0, 0, 0, 0.6
                text_color_focus: 0, 0.25, 0, 1
                multiline: True
                mode: "fill"
                max_height: "220dp"
                fill_color: 0, 0, 0, .4

        BoxLayout:
            size_hint: 1, .25
            orientation: 'horizontal'
            MDIconButton:
                size_hint: .18, 1
                icon: 'sort-alphabetical-variant'
                text: "Выберите вид сортировки"
                color: 0, 0.3, 0.6, 1
                disabled: True

            GridLayout:
                selected_color: 0, 0.3, 0, 1
                id: sort_field
                cols:2

                CheckBox:
                    group: 'sorting'
                    id: sorted_alphab
                    color: 0, 0.65, 0, .9
                    on_active: root.checkbox_click(self,self.active, "по алфавиту")
                MDLabel:
                    text: 'по алфавиту'
                    halign: 'left'
                    color: 0, 0.5, 0, 1
                CheckBox:
                    group: 'sorting'
                    id: sorted_alph_reverse
                    color: 0, 0.65, 0, .9
                    on_active: root.checkbox_click(self,self.active, "обратно алфавиту")
                MDLabel:
                    text: "обратно алфавиту"
                    halign: 'left'
                    color: 0, 0.5, 0, 1
                CheckBox:
                    group: 'sorting'
                    id: sorted_none
                    color: 0, 0.65, 0, .9
                    on_active: root.checkbox_click(self,self.active, "без сортировки")
                MDLabel:
                    text: "без сортировки"
                    halign: 'left'
                    color: 0, 0.5, 0, 1
        BoxLayout:
            size_hint: 1,.1
    AnchorLayout:
        anchor_x: 'right'
        anchor_y: 'bottom'
        padding: [0, 0, 10, 10]
        size_hint: 1, None
        height: dp(40)
        MDRectangleFlatButton:
            id: button_ok
            line_color: 0, 0.5, 0, 1
            text_color: 0, 0.5, 0, 1
            text: 'СОЗДАТЬ КЛАСС'
            on_release: app.save_info_class()
