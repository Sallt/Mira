#:import MDIconButton kivymd.uix.button.button.MDIconButton
#:import MDFlatButton kivymd.uix.button.MDFlatButton
#:import MDTextField kivymd.uix.textfield.textfield.MDTextField
#:import MDFloatingActionButton kivymd.uix.button.MDFloatingActionButton
#:import MDCheckbox kivymd.uix.selectioncontrol.MDCheckbox
#:import MDFloatLayout kivymd.uix.floatlayout.MDFloatLayout

<CreateClass>:
    orientation: 'vertical'
    FloatLayout:
        size_hint: 1, .3
        Image:
            id: avatar
            pos_hint: {'center_y': .5}
            source: 'Data/Img/avatar_empty.png'
        MDFloatingActionButton:
            icon: 'plus'
            size_hint: None, None
            size: dp(56), dp(56)
            opposite_colors: True
            elevation_normal: 8
            pos_hint: {'center_x': .9, 'center_y': .20}
            background_color: app.data.floating_button_color
            background_color_down: app.data.floating_button_down_color
            on_release: app.choice_avatar_class()

    BoxLayout:
        orientation: 'vertical'
        padding: 5, 5
        size_hint: 1, .3

        BoxLayout:
            MDTextField:
                icon_left: 'account-group'
                icon_left_color_focus: 0, 0.4, 0, 1
                id: name_field
                hint_text: "Название Класса"
                hint_text_mode: "on_focus"
                hint_text_color_normal: 0, 0, 0, 0.8
                hint_text_color_focus: 0, 0.3, 0, 0.85
                text_color_normal: 0, 0, 0, 0.6
                text_color_focus: 0, 0.25, 0, 1
                line_color_normal: 0, 0, 0, 0.8
                line_color_focus: 0, 0.3, 0, 0.85
                multiline: False
                #required: True
                mode: "rectangle"
                fill_color: 0, 0, 0, .4

        BoxLayout:
            MDTextField:
                icon_left: 'account-multiple-plus'
                icon_left_color_focus: 0, 0.4, 0, 1
                id: stud_list_field
                hint_text: "Введите список студентов, разделяя учеников переносом строки"
                hint_text_mode: "on_focus"
                hint_text_color_normal: 0, 0, 0, 0.8
                hint_text_color_focus: 0, 0.3, 0, 0.85
                text_color_normal: 0, 0, 0, 0.6
                text_color_focus: 0, 0.25, 0, 1
                multiline: True
                mode: "fill"
                max_height: "220dp"
                fill_color: 0, 0, 0, .4

        MDCheckbox:
            group: 'group'
            size_hint: None, None
            size: dp(48), dp(48)
            selected_color: 0, 0.3, 0.6, 1
            id: sort_field

            MDFloatLayout:
                MDIconButton:
                    icon: 'sort-alphabetical-variant'
                    text: "Выберите вид сортировки"
                    disabled: True
                Check:
                    active: True
                    id: sorted_alphab
                    text: "по алфавиту"
                    pos_hint: {'center_x': .1, 'center_y': .5}
                Check:
                    id: sorted_alphab_reverse
                    text: "обратно алфавиту"
                    pos_hint: {'center_x': .4, 'center_y': .5}
                Check:
                    id: sorted_none
                    text: "без сортировки"
                    pos_hint: {'center_x': .7, 'center_y': .5}


    Widget:
        size_hint: 1, .3

    AnchorLayout:
        anchor_x: 'right'
        anchor_y: 'bottom'
        size_hint: 1, None
        height: dp(40)
        MDFlatButton:
            id: button_ok
            text: 'СОЗДАТЬ КЛАСС'
            on_release: app.save_info_class()
