#:import MDIconButton kivymd.uix.button.MDIconButton
#:import MDFlatButton kivymd.uix.button.MDFlatButton
#:import MDTextField kivymd.uix.textfield.textfield.MDTextField
#:import MDFloatingActionButton kivymd.button.MDFloatingActionButton
#:import MDCheckbox kivymd.uix.selectioncontrol.selectioncontrol.MDCheckbox
#:import MDFloatLayout kivymd.uix.floatlayout.MDFloatLayout

<CreateSet>:
    orientation: 'vertical'

    FloatLayout:
        size_hint: 1, .3

        BoxLayout:
            MDIconButton:
                icon: 'card-text-outline'
                disabled: True
            MDTextField:
                #icon_left: 'account-group'
                icon_left_color_focus: 0, 0.4, 0, 1
                id: name_field
                hint_text: "Название Набора Вопросов"
                hint_text_mode: "on_focus"
                hint_text_color_normal: 0, 0, 0, 0.8
                hint_text_color_focus: 0, 0.3, 0, 0.85
                text_color_normal: 0, 0, 0, 0.6
                text_color_focus: 0, 0.25, 0, 1
                line_color_normal: 0, 0, 0, 0.8
                line_color_focus: 0, 0.3, 0, 0.85
                multiline: False
                #required: True
                mode: "rectangle"
                fill_color: 0, 0, 0, .4

        Image:
            id: image
            pos_hint: {'center_y': .5}
            icon: 'brush'

        MDFloatingActionButton:
            icon: 'plus'
            size_hint: None, None
            size: dp(56), dp(56)
            opposite_colors: True
            elevation_normal: 8
            pos_hint: {'center_x': .9, 'center_y': .20}
            background_color: app.data.floating_button_color
            background_color_down: app.data.floating_button_down_color
            on_release: app.choice_question_image()

    BoxLayout:
        orientation: 'vertical'
        padding: 5, 5
        size_hint: 1, .3

        BoxLayout:
            ##MDIconButton:
                ##icon: 'pencil-plus-outline'
                ##disabled: True
            MDTextField:
                icon_left: 'pencil-plus-outline'
                icon_left_color_focus: 0, 0.4, 0, 1
                id: question_field
                hint_text: "Введите вопрос"
                hint_text_mode: "on_focus"
                hint_text_color_normal: 0, 0, 0, 0.8
                hint_text_color_focus: 0, 0.3, 0, 0.85
                text_color_normal: 0, 0, 0, 0.6
                text_color_focus: 0, 0.25, 0, 1
                line_color_normal: 0, 0, 0, 0.8
                line_color_focus: 0, 0.3, 0, 0.85
                multiline: True
                #required: True
                mode: "fill"
                fill_color: 0, 0, 0, .4

        BoxLayout:
            orientation: 'horizontal'
            ##MDIconButton:
                ##icon: ''
                ##disabled: True
            MDTextField:
                icon_left: 'alpha-a-box-outline'
                icon_left_color_focus: 0, 0.4, 0, 1
                id: answer_a
                hint_text: "Введите вариант ответа 'A'"
                hint_text_mode: "on_focus"
                hint_text_color_normal: 0, 0, 0, 0.8
                hint_text_color_focus: 0, 0.3, 0, 0.85
                text_color_normal: 0, 0, 0, 0.6
                text_color_focus: 0, 0.25, 0, 1
                multiline: False
                mode: "rectangle"
                max_height: "220dp"
                fill_color: 0, 0, 0, .4
            MDCheckbox:
                id: answer_a_check
                size_hint: None, None
                size: "48dp", "48dp"
                pos_hint: {'center_x': .5, 'center_y': .5}
        BoxLayout:
            ##MDIconButton:
                ##icon: ''
                ##disabled: True
            MDTextField:
                icon_left: 'alpha-b-box-outline'
                icon_left_color_focus: 0, 0.4, 0, 1
                id: answer_b
                hint_text: "Введите вариант ответа 'B'"
                hint_text_mode: "on_focus"
                hint_text_color_normal: 0, 0, 0, 0.8
                hint_text_color_focus: 0, 0.3, 0, 0.85
                text_color_normal: 0, 0, 0, 0.6
                text_color_focus: 0, 0.25, 0, 1
                multiline: False
                mode: "rectangle"
                max_height: "220dp"
                fill_color: 0, 0, 0, .4
            MDCheckbox:
                active: True
                id: answer_b_check
                size_hint: None, None
                size: "48dp", "48dp"
                pos_hint: {'center_x': .5, 'center_y': .5}
        BoxLayout:
            ##MDIconButton:
                ##icon: ''
                ##disabled: True
            MDTextField:
                icon_left: 'alpha-c-box-outline'
                icon_left_color_focus: 0, 0.4, 0, 1
                id: answer_c
                hint_text: "Введите вариант ответа 'C'"
                hint_text_mode: "on_focus"
                hint_text_color_normal: 0, 0, 0, 0.8
                hint_text_color_focus: 0, 0.3, 0, 0.85
                text_color_normal: 0, 0, 0, 0.6
                text_color_focus: 0, 0.25, 0, 1
                multiline: False
                mode: "rectangle"
                max_height: "220dp"
                fill_color: 0, 0, 0, .4
            MDCheckbox:
                id: answer_c_check
                size_hint: None, None
                size: "48dp", "48dp"
                pos_hint: {'center_x': .5, 'center_y': .5}
        BoxLayout:
            ##MDIconButton:
                ##icon: ''
                ##disabled: True
            MDTextField:
                icon_left: 'alpha-d-box-outline'
                icon_left_color_focus: 0, 0.4, 0, 1
                id: answer_d
                hint_text: "Введите вариант ответа 'D'"
                hint_text_mode: "on_focus"
                hint_text_color_normal: 0, 0, 0, 0.8
                hint_text_color_focus: 0, 0.3, 0, 0.85
                text_color_normal: 0, 0, 0, 0.6
                text_color_focus: 0, 0.25, 0, 1
                multiline: False
                mode: "rectangle"
                max_height: "220dp"
                fill_color: 0, 0, 0, .4
            MDCheckbox:
                id: answer_d_check
                size_hint: None, None
                size: "48dp", "48dp"
                pos_hint: {'center_x': .5, 'center_y': .5}


    Widget:
        size_hint: 1, .3

    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'bottom'
        size_hint: 1, None
        height: dp(40)
        MDFlatButton:
            id: button_next
            text: 'ДАЛЬШЕ'
            on_release: app.save_question()


    Widget:
        size_hint: 1, .3

    AnchorLayout:
        anchor_x: 'right'
        anchor_y: 'bottom'
        size_hint: 1, None
        height: dp(40)
        MDFlatButton:
            id: button_ok
            text: 'СОЗДАТЬ НАБОР'
            on_release: app.save_info_set()